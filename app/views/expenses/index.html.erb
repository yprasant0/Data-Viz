<%= column_chart @column_data, stacked: true, prefix: "rs", thousands: "," %>
<%= pie_chart Expense.group(:type).sum(:amount) %>

<table>
  <thead>
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Type</th>
    <th>Amount</th>
  </tr>
  </thead>
  <tbody>
  <% @expenses.each do |e| %>
    <tr>
      <td><%= e.date %></td>
      <td><%= e.description %></td>
      <td><%= e.type %></td>
      <td><%= e.amount %></td>
    </tr>
  <% end %>
  </tbody>
</table>
